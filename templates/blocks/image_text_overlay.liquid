{%- liquid 
  assign type = content_block.sub_type 
  assign banner_attribute = blank
  assign banner_container_attribute = blank

  if type == "hero_image"
    assign banner_attribute = "data-banner"
    assign banner_container_attribute = "data-banner-container"
  endif
-%}

<div
  class="SC-ContentBlock SC-ImageTextOverlay"
  id="{% if content_block.identifier != blank %}SC-ContentBlock-{{ content_block.identifier }}{% endif %}"
  data-cb="{{ content_block.identifier }}">
  <div class="SC-Banner{% if type != blank %} {{ type }}{% endif %}"{% if content_block.image != blank %} style="background-image: url('{{ content_block.image.massive_url }}')"{% endif %}{% if banner_attribute != blank %} data-banner{% endif %}>
    <div class="SC-Banner_container{% if content_block.alignment != blank %} sc-{{ content_block.alignment }}{% endif %}"{% if banner_container_attribute != blank %} data-banner-container{% endif %}>
      <div class="SC-Banner_content" data-scroll-reveal>

        {%- unless content_block.title == blank %}
          <h2 class="SC-Banner_heading">
            {{ content_block.title }}
          </h2>
        {%- endunless %}

        {%- unless content_block.subtitle == blank %}
          <div class="SC-Banner_subheading">
            {{ content_block.subtitle }}
          </div>
        {%- endunless %}

        {%- unless content_block.content == blank %}
          <div class="sc-mt-small">
            {{ content_block.content }}
          </div>
        {%- endunless %}

        {%- unless content_block.link_label == blank or content_block.link_target == blank %}
          <a class="SC-Banner_cta" href="{{ content_block.link_target }}">
            {{ content_block.link_label }}
          </a>
        {%- endunless %}
      </div>
    </div>
    {%- if type == 'offset' or type == 'hero_image' %}
      <div class="SC-Banner_overlay"></div>
    {%- endif %}
  </div>
</div>