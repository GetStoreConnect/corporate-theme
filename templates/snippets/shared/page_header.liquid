{%- default header_modifier: blank -%}
{%- default wrapper_modifier: blank -%}
{%- default heading: blank -%}
{%- default heading_styles: blank %}
{%- default sub_heading: blank -%}
{%- default summary: blank -%}
{%- default modifier: blank -%}
{%- default image: blank -%}

<header class="SC-PageHeader {{ header_modifier }}" {% if image != blank %}style="background-image: url({{ image.huge_url }})"{% endif %}>
  <div class="{{ wrapper_modifier }}">
    {%- if heading != blank %}
      <h1 class="SC-PageHeader_heading {{ heading_styles }} sc-mb-large">
        {{ heading }}
      </h1>
    {%- endif %}
    {%- if sub_heading != blank %}
      <div class="SC-PageHeader_subheading">
        {{ sub_heading }}
      </div>
    {%- endif %}
    {%- if summary != blank %}
      <div class="SC-PageHeader_summary">
        {{ summary }}
      </div>
    {%- endif %}
  </div>
</header>